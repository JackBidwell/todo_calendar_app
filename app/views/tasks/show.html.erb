<!-- app/views/tasks/show.html.erb -->
<div class="tasks-container">
  <h1 class="title"><%= @task.title %></h1>
  <p class="task-detail"><%= @task.description %></p>
  <p class="task-detail">Due date: <%= @task.due_date %></p>
  <p class="task-detail">Completed: <%= @task.completed ? 'Yes' : 'No' %></p>

  <div class="task-actions">
    <%= link_to 'Edit', edit_task_path(@task), class: "btn btn-warning" %> |
    <%= link_to 'Back to tasks', tasks_path, class: "btn btn-secondary" %>
  </div>
</div>
